left()
  margin-right auto

right()
  margin-left auto

body
  margin 0 auto
  background #fafafa!important
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Open Sans","Helvetica Neue",sans-serif!important

header
  text-align center
  background #fff
  box-shadow 0 2px 2px -2px rgba(0,0,0,.15)

  .loadbar
    margin 0 auto
    height 3px
    background #00ab6b

  .container
    margin 0 auto

    .main
      padding 0 5rem

      .upper
        display flex
        border-bottom 1px solid rgba(0,0,0,.05)

        .logo
          margin 0 auto 0 0
          fill rgba(0,0,0,.75)

          .mark
            svg
              path:nth-child(1)
                fill #d0d2d3
              path:nth-child(2)
                fill #a6a8ab
              path:nth-child(3)
                fill #808184
              path:nth-child(4)
                fill #58595b

        .tool
          margin 0 0 0 auto
          display flex
          align-items center

          .item
            margin 0 auto 0 auto
            min-width 3rem

          .text-writestory
            color green

            .text
              color #00ab6b
              padding 4px
              border solid 1px
              border-radius 36px
              border-color #00ab6b

          .icon
            margin 0 0 0 0

      .under
        .menu
          margin 0
          padding 0
          display flex
          justify-content space-between

          .item
            color rgba(0,0,0,.44)!important
            list-style none
            padding 1rem 0
            font-size 0.8rem

.main_content
  display flex
  justify-content flex-start
  padding-top 3rem

  .contents
    width 50rem

    .editor
      border 1px solid rgba(0,0,0,.09)
      box-shadow 0 1px 4px rgba(0,0,0,.04)
      margin 0 5rem
      height 5rem
      display flex
      justify-content flex-start

      .icon
        padding-left 1rem
        margin auto 0

      .text
        padding-left 1rem
        margin auto 0
        color rgba(0,0,0,.44)
        font-size 1.1rem
        font-family medium-content-serif-font,Georgia,Cambria,"Times New Roman",Times,serif

    .articles
      .article
        border 1px solid rgba(0,0,0,.09)
        box-shadow 0 1px 4px rgba(0,0,0,.04)
        margin 2rem 5rem
        padding 1rem

        .message
          margin 0
          font-size 0.8rem
          color rgba(0,0,0,.44)

        .detail
          display flex
          align-items center

          .info
            font-size 0.7rem
            padding-left 1rem

            p
              margin 0.4rem 0

              a, span
                padding-right 0.2rem

        .article_footer
          display flex

          .like_tool
            left()

            display flex
            align-items center

            a, span
              padding 0.2rem
              font-size 0.8rem
              color rgba(0,0,0,.44)

          .bookmark_tool
            right()

            display flex
            align-items center

            a, span
              padding 0 0.1rem
              font-size 0.8rem
              color rgba(0,0,0,.44)

  .navigation_container
    width 20rem

    .navigation
      .navigation_header
        padding-bottom 2px
        box-shadow 0 2px 2px -2px rgba(0,0,0,.15)

        h1
          font-size 0.8rem
          font-weight 400
          color rgba(0,0,0,.44)

        p
          font-size 0.8rem
          font-weight 400
          color rgba(0,0,0,.8)

      .navigation_content
        display flex
        justify-content flex-start
        padding 1rem 0

        .icon
          padding 0 1rem

        .info
          .title
            font-size 12px
            color rgba(0,0,0,.8)
            padding 0.1rem 0

          .name
            font-size 12px
            color rgba(0,0,0,.44)
            padding 0.1rem 0


footer
  ul
    display flex
    justify-content space-between
    list-style none

    li a
      color rgba(0,0,0,.44)
      font-size 0.9rem
      font-weight 600

.avater
  border-radius 100%
